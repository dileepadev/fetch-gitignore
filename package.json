{
  "name": "fetch-gitignore",
  "version": "1.0.0",
  "description": "A terminal/CLI tool using Node.js that allows developers to fetch official .gitignore templates from GitHub and save them to their project. This tool will simplify initializing projects with the correct .gitignore and improve developer productivity.",
  "main": "./dist/bin/index.js",
  "scripts": {
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dileepadev/fetch-gitignore.git"
  },
  "keywords": [
    "gitignore",
    "cli",
    "terminal",
    "github",
    "templates",
    "fetch",
    "nodejs",
    "tool",
    "developer-tools"
  ],
  "author": "Dileepa Bandara",
  "license": "MIT",
  "bin": {
    "fetch-gitignore": "./dist/bin/index.js"
  },
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "files": [
    "dist/bin",
    "dist/src"
  ],
  "bugs": {
    "url": "https://github.com/dileepadev/fetch-gitignore/issues"
  },
  "homepage": "https://github.com/dileepadev/fetch-gitignore#readme",
  "dependencies": {
    "chalk": "^5.6.2",
    "commander": "^14.0.3",
    "node-fetch": "^3.3.2",
    "ora": "^9.3.0"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "@vitest/coverage-v8": "^4.0.18",
    "typescript": "^5.9.2",
    "vitest": "^4.0.18"
  }
}
